   n=s.nextInt;
  System.out.println("enter the elements of array\n");
   for(i=0;i<n;i++)
    a[i]=s.nextInt;
  System.out.println("enter the element to be checked in the give array\n");
   key=s.nextInt;
  
  first=0;
  last=n-1;
  while(firs<=last)
   { mid=(first+last)/2;
     if(key>a[mid])
     first=mid++;
     elseif(key<a[mid])
     last=mid--;
     else
     System.out.println("the key element is found at i="+mid);
     
   }
